        android:padding="5dp"
        android:layout_height="match_parent"
        android:background="?attr/background_color">

        <ImageView
            android:id="@+id/source_img"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="120dp" />
